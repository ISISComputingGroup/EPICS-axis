record (transform, "$(P)$(AXIS):INIT")
{
	field(DESC, "Axis Value Init")
    field(COPT, "Always")
    field(PINI, "YES")
	field(INPA, "$(P)$(mAXIS).VAL NPP NMS")
	field(CLCA, "A")
	field(OUTA, "$(P)$(AXIS):SP NPP NMS")
	field(PREC, "3")
	field(CMTA, "Axis initial setpoint")
}
