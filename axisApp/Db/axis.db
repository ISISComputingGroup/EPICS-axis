#kvlb23 - Story #429
#Addition of alias here to provide aliasing of the motor to the axis.
#Note that in any st.cmd that loads this it will have to be a logical name in $(AXIS)
alias("$(P)$(mAXIS)","$(P)$(AXIS):MTR")
#kvlb23 - Story #429

record (ao, "$(P)$(AXIS):SP")
{
	field(DESC, "Axis Setpoint")
	field(OUT, "$(P)$(mAXIS).VAL PP MS")
	field(PREC, "3")
    info(archive, "VAL")
}

record (ai, "$(P)$(AXIS)") 
{
	field(SCAN, ".1 second")
	field(DESC, "Current Axis position")
	field(PREC, "3")
    field(INP, "$(P)$(mAXIS).RBV")
    info(archive, "VAL")
}

record (ai, "$(P)$(AXIS):SP:RBV") 
{
	field(SCAN, ".1 second")
	field(DESC, "Current Axis position")
	field(PREC, "3")
    field(INP, "$(P)$(mAXIS).VAL")
    info(archive, "VAL")
}

